@model KeyStore.Models.NewUserViewModel



@using (Html.BeginForm("Register", "User",FormMethod.Get)) 
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="form-horizontal col-xs-6">
            <h4>Register</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>

        <div class="form-horizontal col-xs-6 key-store-holder">
            <div>
                @Html.ActionLink("Key Store Key", "_Register", "User", null, new { @class = "modal-link btn btn-success", onclick = "return false;" })
                

            </div>

        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Registered")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script>
    $(function () {
        $('#approve-btn').click(function () {
            $('#modal-container').modal('hide');
        });
    });

    $(document).ready(function () {
        $('.modal-link btn btn-success').click(function () {
            $(this).closest('form')[0].submit();
        });
    });

    </script>

}
